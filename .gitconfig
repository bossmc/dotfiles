[alias]
  graph = log --format=graph --graph
[push]
  default = upstream
  followTags = true
  autoSetupRemote = true
[merge]
  defaultToUpstream = true
  conflictstyle = diff3
  ff = only
[color]
  ui = true
[pretty]
  graph = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
[core]
  excludesfile = /home/ubuntu/.gitignore_global
  editor = vim
	pager = delta
[fetch]
  prune = true
  recurseSubmodules = true
[status]
  submoduleSummary = true
[diff]
  submodule = log
[pull]
  ff = only
[commit]
  gpgSign = true
[branch]
  autoSetupMerge = false
[init]
  defaultBranch = main
